<center><h1>Sign In - Lead Tracking System</h1></center>
<%= form_tag sessions_path do %>
    <table style="margin: 0 auto;" cellpadding="0" cellspacing="0" border="0" align="center" class="frame">
      <tr>
        <td><table border="0" align="center" cellpadding="10" cellspacing="0">
            <tr>
              <td width="150" align="right" class="fieldarea">Email:</td>
              <td><%= email_field_tag :email %></td>
            </tr><br />
            <tr>
              <td width="150" align="right" class="fieldarea">Password:</td>
              <td><%= password_field_tag :password, params[:password] || '' %></td>
            </tr>
            <tr>
              <td width="150" align="right" class="fieldarea"><input type="checkbox" name="rememberme"{if $rememberme} checked="checked"{/if} /></td>
              <td>Remember Me Until I logout:</td>
            </tr><br />
            <tr>
              <td width="150" align="right" class="fieldarea">&nbsp;</td>
              <td><%= submit_tag "Sign In", class: "btn btn-success" %></td>
            </tr>
          </table></td>
      </tr>
    </table>
<% end %>
<p align="center"><a href="#">Forget Your Password?</a></p>