<div id="main">     
<div class="container">
    <div class="page-heading">
    	<h1>Edit Your Account Details</h1>
    </div>

    <h5 class="underline"><%= @user.first_name %> <%= @user.last_name %>'s Information</h5>

    <h5 class="underline">Your Company: 
        <% if @user.company.present? %> 

            <%= @user.company.company_name %>
        <% else %>
            <%= @user.agency.company_name %>
        <% end %>
    </h5>

            <%= form_for @user do |f| %>
            <div class="row-fluid row-content">
                <div class="span6">
                    <div class="control-group span6">
                        <label>First Name</label>
                        <%= f.text_field :first_name, placeholder: @user.first_name %>
                    </div>    
                    <div class="control-group span6">
                        <label>Last Name</label>
                        <%= f.text_field :last_name, placeholder: @user.last_name %>
                    </div>
                    <div class="control-group span12">
                        <label>Email<span class="question" title="If you need to change this email please email support@leadgenhvac.com"></span></label>
                        <%= f.text_field :email, placeholder: @user.email %>
                    </div> 
                    <div class="control-group span12">
                        <label>Phone Number</label>
                        <div class="row-inline row-fluid">
                            <%= f.text_field :phonenumber, placeholder: @user.phonenumber %>
                        </div>
                    </div>
                     <div class="control-group  span12">
                        <label>Password</label>
                        <div class="row-inline row-fluid">
                            <%= f.password_field :password, placeholder: "Only edit if you want to change your password", style: "width: 573px;" %>
                         </div>
                    </div>   

                </div>
            </div>             
            <div class="form-actions">
                    <input class="btn btn-green btn-wide btn-large pull-right" type="submit" name="save" value="Save Changes" />
            </div>
        
        <% end %>
