<div id="main">     
<div class="container">
    	<h1>The Different Types Of Customers You Want Us To Track</h1>
            <%= form_for @actiontype do |f| %>
            <div class="row-fluid row-content new-actiontype">
                <ul>
                    <%= f.hidden_field :user_id, :value => current_user.id %>

                    <li><label>Different Types Of Customers You Want Us To Track</label><br />
                    <%= f.text_field :action_type, placeholder: "New Customer" %></li>
                </ul>
            </div>             
            <div class="form-actions">
                    <%= link_to "Cancel", actiontypes_path, class: "pull-right", style: "margin-left: 10px; margin-top: 10px;" %>
                    <input class="btn btn-green btn-wide btn-large pull-right" type="submit" name="save" value="Create A New Action Type" />
            </div>
        
        <% end %>
