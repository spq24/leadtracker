<div class="container-fluid">
    <%= render 'side_nav' %>
    
    <div class="col-xs-12 col-sm-9 col-md-9 col-lg-10 pushright">
        <div id="bodycontainer">
            <div class="row">
                <div class="col-md-2">&nbsp;</div>
                <div class="col-md-8">
                    <form role="search" id="fsearch">
                        <div class="form-group" id="search-form">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search" name="search" id="search-box" autocomplete="off" />
                                <span class="input-group-btn" id="btn-search">
                                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="well" id="filter">
                <%= form_for @filterrific do |f| %>
                    <div class="row">
                        <div class="col-sm-6 col-md-4 col-lg-2">
                            <%= f.select(:with_companies, @filterrific.select_options[:with_companies], { include_blank: ' - All Customers -'}, class: "btn btn-default dropdown-toggle") %>
                        </div>
                        <div class="col-md-2 pull-right">
                        </div>
                        <div class="col-md-2 pull-right">
                        </div>                              
                    </div>
                <% end %>
            </div>
            <h3 class="page-header"><%= @agency.company_name %> Customers</h3>
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
              <div class="panel panel-success">
                <h4>
                    <ul class="tracker-labels">
                        <li class="col-md-4">Company Name</li>
                        <li class="col-md-2">Total Leads</li>
                        <li class="col-md-3">Months On</li>
                        <li>Status</li>
                    </ul>
                </h4>
              </div>
            </div>
            <% @agency.companies.each do |c| %>
                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                  <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="heading<%= c.id %>">
                      <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= c.id %>" aria-expanded="true" aria-controls="collapse<%= c.id %>" class="col-md-4"><%= c.company_name %></a>
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= c.id %>" aria-expanded="true" aria-controls="collapse<%= c.id %>" class="col-md-2"><%= c.opportunities.actual_leads.count %></a>
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= c.id %>" aria-expanded="true" aria-controls="collapse<%= c.id %>" class="col-md-3"><%= (Time.now.year * 12 + Time.now.month) - (c.created_at.year * 12 + c.created_at.month) %></a>
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= c.id %>" aria-expanded="true" aria-controls="collapse<%= c.id %>"><span class="label label-success" style="padding:5px 13px; display: inline;"></span></a>
                      </h4>
                    </div>
                    <div id="collapse<%= c.id %>" class="panel-collapse collapse out" role="tabpanel" aria-labelledby="heading<%= c.id %>">
                      
                      <div class="panel-body widget widget-content widget-white">
                          
                          <div class="col-md-3">
                            <h5>
                              <% if c.google_maps_url.present? %>
                                <%= best_in_place c, :google_maps_url, :activator => "#googlelink",
                                  :display_with => lambda { 
                                    |google_maps_url| link_to_if(google_maps_url.present?,"Google My Business:", "https://"+google_maps_url, target: "_blank")
                                  }, :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %>
                              <% else %>
                                Google My Business: <%= best_in_place c, :google_maps_url, activator: "#googlelink", placeholder: "add", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %>
                              <% end %>
                              <% if c.google_maps_status == "1" %>
                                <span class="label label-success">
                                  <%= best_in_place c, :google_maps_status, as: :select, collection: %w(Verified Not-Verified) %>
                                </span>
                              <% else %>
                                <span class="label label-danger">
                                  <%= best_in_place c, :google_maps_status, as: :select, collection: %w(Verified Not-Verified), place_holder: "Not Verified" %>
                                </span>
                              <% end %><br />
                              <small><%= link_to "(Edit Link)", "#", id: "googlelink", class: "edit-link" %></small>
                            </h5>
                              <br />
                              
                              <b>Google Notes:</b><br />
                              <%= best_in_place c, :google_maps_notes, as: :textarea, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %><br /><br />
                              <b>Google Verified Date:</b><br />
                              <%= best_in_place c, :google_verified_date, as: :date, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %><br />
                              <b>Login Info</b><br />
                              <p>Username: <%= best_in_place c, :google_account, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %><br />
                                 Password: <%= best_in_place c, :google_password, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %>
                              </p>

                              <br />

                              <b>Main Contact:</b><br />
                              <p>First Name:<%= c.users.first.first_name %></p>
                              <p>Last Name:<%= c.users.first.last_name %></p>
                              <p>Email: <%= mail_to c.users.first.email %></p>
                          </div>
                          
                          <div class="col-md-3">
                              <h5>
                              <% if c.bing_places_url.present? %>
                                <%= best_in_place c, :bing_places_url, :activator => "#binglink",
                                  :display_with => lambda { 
                                    |bing_places_url| link_to("Bing Places:", "https://"+bing_places_url, target: "_blank")
                                  }, :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %>
                              <% else %>
                                 Bing Places: <%= best_in_place c, :bing_places_url, activator: "#binglink", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %>
                              <% end %>
                              
                                <% if c.bing_places_status == "1" %>
                                <span class="label label-success">
                                  <%= best_in_place c, :bing_places_status, as: :select, collection: %w(Verified Not-Verified), value: c.bing_places_status %>
                                </span>
                                <% else %>
                                  <span class="label label-danger">
                                   <%= best_in_place c, :bing_places_status, as: :select, collection: %w(Verified Not-Verified), place_holder: "Not Verified" %>
                                  </span>
                                <% end %><br />
                                <small><%= link_to "(Edit Link)", "#", id: "binglink", class: "edit-link" %></small>
                              </h5>
                              
                              <br />

                              <b>Bing Notes:</b><br />
                              <%= best_in_place c, :bing_places_notes, as: :textarea, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %><br /><br />
                              <b>Bing Verified Date:</b><br />
                              <%= best_in_place c, :bing_verified_date, as: :date, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %><br />
                              <b>Login Info</b><br />
                              <p>Username: <%= best_in_place c, :bing_account, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %><br />
                                 Password: <%= best_in_place c, :bing_password, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %>
                              </p>

                              <br />

                              <b>Address Information:</b><br />
                              <p>Address (Line 1): <%= best_in_place c, :address_one, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %></p>
                              <p>Address (Line 2): <%= best_in_place c, :address_two, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %></p></p>
                              <p>City: <%= best_in_place c, :city, value: c.city, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %></p></p>
                              <p>State: <%= best_in_place c, :state, value: c.state, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %></p></p>
                              <p>Zip Code: <%= best_in_place c, :zip, value: c.zip, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %></p></p>
                              <p>Country: <%= best_in_place c, :country, value: c.country, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %></p></p>
                          </div>
                          
                          <div class="col-md-3">
                              <h5>
                              <% if c.yelp_url.present? %>
                                <%= best_in_place c, :yelp_url, :activator => "#yelplink",
                                  :display_with => lambda { 
                                    |yelp_url| link_to_if(yelp_url.present?,"Yelp:", "https://"+yelp_url, target: "_blank")
                                  }, :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %>
                              <% else %>
                                Yelp: <%= best_in_place c, :yelp_url, activator: "#yelplink", placeholder: "add", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %>
                              <% end %>

                                <% if c.yelp_status == "1" %>
                                <span class="label label-success">
                                  <%= best_in_place c, :yelp_status, as: :select, collection: %w(Verified Not-Verified) %>
                                </span>
                                <% else %>
                                <span class="label label-danger">
                                  <%= best_in_place c, :yelp_status, as: :select, collection: %w(Verified Not-Verified), place_holder: "Not Verified", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %>
                                </span>
                                <% end %><br />
                                <small><%= link_to "(Edit Link)", "#", id: "yelplink", class: "edit-link" %></small>
                              </h5>

                              <br />
                              
                              <b>Yelp Notes:</b><br />
                              <%= best_in_place c, :yelp_notes, as: :textarea, value: c.yelp_notes, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %><br /><br />
                              <b>Yelp Verified Date:</b><br />
                              <%= best_in_place c, :yelp_verified_date, as: :date, value: c.yelp_verified_date, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %><br />
                              <b>Login Info</b><br />
                              <p>Username: <%= best_in_place c, :yelp_account, value: c.yelp_account, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %><br />
                                 Password: <%= best_in_place c, :yelp_password, value: c.yelp_password, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %>
                              </p>

                              <br />

                              <b>Login Info</b><br />
                              <p>Website: <%= link_to c.website_url, "http://"+c.website_url, target: "_blank"  %></p>
                              <p>Avg. Opportunities/Month: <%= c.opportunities.where(reviewed: true).count / ((Time.now.year * 12 + Time.now.month) - (c.created_at.year * 12 + c.created_at.month)) %></p>
                              <p>Avg. Leads/Month: <%= c.opportunities.actual_leads.count / ((Time.now.year * 12 + Time.now.month) - (c.created_at.year * 12 + c.created_at.month)) %></p>
                              <p>Sales Person: SALESMAN NAME</p>
                          </div>
                         
                          <div class="col-md-3">
                              <h5>
                                <% if c.yahoo_local_url.present? %>
                                  <%= best_in_place c, :yahoo_local_url, :activator => "#yahoolink",
                                  :display_with => lambda { 
                                    |yahoo_local_url| link_to_if(yahoo_local_url.present?,"Yahoo Local:", "https://"+yahoo_local_url, target: "_blank")
                                  }, :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %>
                                <% else %>
                                 Yahoo Local: <%= best_in_place c, :yahoo_local_url, activator: "#yahoolink", placeholder: "add", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %>
                                <% end %>
                                <% if c.yahoo_local_status == "1" %>
                                  <span class="label label-success">
                                    <%= best_in_place c, :yahoo_local_status, as: :select, collection: %w(Verified Not-Verified), :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %>
                                  </span>
                                <% else %>
                                <span class="label label-danger">
                                  <%= best_in_place c, :yahoo_local_status, as: :select, collection: %w(Verified Not-Verified), place_holder: "Not Verified" %>
                                </span>
                                <% end %><br />
                                <small><%= link_to "(Edit Link)", "#", id: "yahoolink", class: "edit-link" %></small>
                              </h5>

                              <br />
                              
                              <b>Yahoo Local Notes:</b><br />
                              <%= best_in_place c, :yahoo_local_notes, as: :textarea, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %><br /><br />
                              <b>Yahoo Verified Date:</b><br />
                              <%= best_in_place c, :yahoo_verified_date, as: :date, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %><br />
                              <b>Login Info</b><br />
                              <p>Username: <%= best_in_place c, :yahoo_account, value: c.yahoo_account, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %><br />
                                 Password: <%= best_in_place c, :yahoo_password, value: c.yahoo_password, place_holder: "empty", :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger" %>
                              </p>
                          </div>

                          <br />

                          <div class="col-md-12">
                            <b>Notes:</b>
                            <%= best_in_place c, :admin_notes, :cancel_button => "x", :cancel_button_class => "bip-cancel btn-danger", :as => :textarea, :nil => "Add/Edit Notes", value: c.admin_notes, place_holder: "Add/Edit Notes" %>
                          </div>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>