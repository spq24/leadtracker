<div class="container-fluid">
    <%= render 'side_nav' %>
    <div class="col-xs-12 col-sm-9 col-md-9 col-lg-10 pushright">
        <div id="bodycontainer">
            <div class="row">
                <div class="col-md-2">&nbsp;</div>
                <div class="col-md-8">
                    <form role="search" id="fsearch">
                        <div class="form-group" id="search-form">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search" name="search" id="search-box" autocomplete="off" />
                                <span class="input-group-btn" id="btn-search">
                                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="well" id="filter">
                <%= form_for @filterrific do |f| %>
                    <div class="row">
                        <div class="col-sm-6 col-md-4 col-lg-2">
                            <%= f.select(:with_companies, @filterrific.select_options[:with_companies], { include_blank: ' - All Customers -'}, class: "btn btn-default dropdown-toggle") %>
                        </div>
                        <div class="col-md-2 pull-right">
                        </div>
                        <div class="col-md-2 pull-right">
                        </div>                              
                    </div>
                <% end %>
            </div>
            <h3 class="page-header"><%= @agency.company_name %> Customers</h3>
            <table class="table table-striped table-hover">
              <tr>
              <th>Company Name</th>
              <th>Leads Since Start</th>
              <th>Months With Your Company</th>
              <th>Status</th>
              </tr>
            <tr>
            <% @agency.companies.each do |c| %>
                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                  <div class="panel panel-success">
                    <div class="panel-heading" role="tab" id="heading<%= c.id %>">
                      <tr class="panel-title">
                        <td><a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= c.id %>" aria-expanded="true" aria-controls="collapse<%= c.id %>" style="margin-right:25%;"><%= c.company_name %></a></td>
                        <td><a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= c.id %>" aria-expanded="true" aria-controls="collapse<%= c.id %>" style="margin-right:20%;"><%= c.opportunities.actual_leads.count %></a></td>
                        <td><a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= c.id %>" aria-expanded="true" aria-controls="collapse<%= c.id %>" style="margin-right:20%;"><%= (Time.now.year * 12 + Time.now.month) - (c.created_at.year * 12 + c.created_at.month) %></a></td>
                        <td><a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= c.id %>" aria-expanded="true" aria-controls="collapse<%= c.id %>" style="margin-right:20%;"><span class="label label-success" style="padding:5px 13px; display: inline;"></span></a></td>
                      </tr>
                    </div>
                    <div id="collapse<%= c.id %>" class="panel-collapse collapse out" role="tabpanel" aria-labelledby="heading<%= c.id %>">
                      <tr>
                      <div class="panel-body widget widget-content widget-white">
                          <td>
                              <% if c.google_maps_url.present? %>
                                <b><%= link_to "Google Listing", "https://"+c.google_maps_url, target:"_blank" %></b>
                              <% else %>
                                <b>Google Listing</b>
                              <% end %>
                              <% if c.google_maps_status == 'verified' %>
                              <span class="label label-success">Verified</span>
                              <% else %>
                              <span class="label label-danger">Not Verified</span>
                              <% end %><br />
                              <b>Google Notes:</b><br />
                              <%= c.google_maps_notes %><br />
                              <b>Google Verified Date:</b><br />
                              <%= c.google_verified_date %><br />
                              <b>Login Info</b><br />
                              <p>Username: <%= c.google_account %></p><br />
                              <p>Password: <%= c.google_password %></p><br /><br />

                              <b>Main Contact:</b><br />
                              <p>First Name:<%= c.users.first %></p>
                              <p>Last Name:<%= c.users.first %></p>
                              <p>Email:<%= c.users.first %></p>
                          </td>
                          <td>
                              <% if c.bing_places_url.present? %>
                                <b><%= link_to "Bing Listing", "http://"+c.bing_places_url, target:"_blank" %></b>
                              <% else %>
                                <b>Bing Listing</b>
                              <% end %>
                              <% if c.bing_places_status == 'verified' %>
                              <span class="label label-success">Verified</span>
                              <% else %>
                              <span class="label label-danger">Not Verified</span>
                              <% end %><br />
                              <b>Bing Notes:</b><br />
                              <%= c.bing_places_notes %><br />
                              <b>Bing Verified Date:</b><br />
                              <%= c.bing_verified_date %><br />
                              <b>Login Info</b><br />
                              <p>Username:<p><%= c.bing_account %><br />
                              <p>Password:<p><%= c.bing_password %><br /><br />
                              
                              <b>Address Information:</b><br />
                              <p>Address (Line 1): <%= c.address_one %></p>
                              <p>Address (Line 2): <%= c.address_two %></p>
                              <p>City: <%= c.city %></p>
                              <p>State: <%= c.state %></p>
                              <p>Zip Code: <%= c.zip %></p>
                              <p>Country: <%= c.country %></p>
                          </td>
                          <td>
                              <% if c.yelp_url.present? %>
                                <b><%= link_to "Yelp Listing", "http://"+c.yelp_url, target:"_blank" %></b>
                              <% else %>
                                <b>Yelp Listing</b>
                              <% end %>
                              <% if c.yelp_status == 'verified' %>
                              <span class="label label-success">Verified</span>
                              <% else %>
                              <span class="label label-danger">Not Verified</span>
                              <% end %><br />
                              <b>Yelp Notes:</b><br />
                              <%= c.yelp_notes %><br />
                              <b>Yelp Verified Date:</b><br />
                              <%= c.yelp_verified_date %><br />
                              <b>Login Info</b><br />
                              <p>Username:<p><%= c.yelp_account %><br />
                              <p>Password:<p><%= c.yelp_password %><br /><br />
                              <p>Website: <%= link_to c.website_url, "http://"+c.website_url, target: "_blank"  %></p>
                              <p>Avg. Opportunities/Month: <%= c.opportunities.where(reviewed: true).count / ((Time.now.year * 12 + Time.now.month) - (c.created_at.year * 12 + c.created_at.month)) %></p>
                              <p>Avg. Leads/Month: <%= c.opportunities.actual_leads.count / ((Time.now.year * 12 + Time.now.month) - (c.created_at.year * 12 + c.created_at.month)) %></p>
                              <p>Sales Person: SALESMAN NAME</p>
                          </td>
                          <td>
                              <% if c.yahoo_local_url.present? %>
                                <b><%= link_to "Yahoo Listing", "http://"+c.yahoo_local_url, target:"_blank" %></b>
                              <% else %>
                                <b>Yahoo Listing</b>
                              <% end %>
                              <% if c.yahoo_local_status == 'verified' %>
                              <span class="label label-success">Verified</span>
                              <% else %>
                              <span class="label label-danger">Not Verified</span>
                              <% end %><br />
                              <b>Yahoo Local Notes:</b><br />
                              <%= c.yahoo_local_notes %><br />
                              <b>Yahoo Verified Date:</b><br />
                              <%= c.yahoo_verified_date %><br />
                              <b>Login Info</b><br />
                              <p>Username:<p><%= c.yahoo_account %><br />
                              <p>Password:<p><%= c.yahoo_password %>
                          </td><br />
                          </tr>
                          <tr>
                          <td>
                            <b>Notes:</b>
                            <p><%= c.admin_notes %></p>
                          </td>
                          </tr>
                      </div>
                  </div>
                </div>
            <% end %>
        </table>